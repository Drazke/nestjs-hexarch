{
  "name": "nestjs-hexarch",
  "version": "1.0.0",
  "description": "NestJS hexagonal architecture example",
  "main": "main.js",
  "repository": "git@github.com:Drazke/nestjs-hexarch.git",
  "author": "drazke",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "test:unit",
    "test:unit": "vitest --config ./test/vitest-unit.config.ts --coverage",
    "test:integration": "vitest --config ./test/vitest-integration.config.ts",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/vitest --config ./test/vitest-debug.config.ts",
    "dagger": "node --loader ts-node/esm ./build.mts"
  },
  "engines": {
    "node": "^20.14"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/microservices": "^10.3.9",
    "@nestjs/mongoose": "^10.0.6",
    "@nestjs/platform-express": "^10.3.9",
    "axios": "^1.7.2",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.11",
    "express": "4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.1",
    "kafkajs": "^2.2.4",
    "mongoose": "^8.4.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "ts-pattern": "^5.2.0"
  },
  "devDependencies": {
    "@dagger.io/dagger": "^0.11.7",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/testing": "^10.3.9",
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.5.29",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "unplugin-swc": "^1.4.5",
    "vitest": "^1.6.0"
  }
}
